{
  "name": "business-builder-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "install:all": "npm install && npm install --prefix api/server && npm install --prefix app/web",
    "dev:api": "npm run dev --prefix api/server",
    "dev:app": "npm run dev --prefix app/web",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:app\"",
    "build:api": "npm run build --prefix api/server",
    "build:app": "npm run build --prefix app/web",
    "build": "npm run build:api && npm run build:app"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}